<section class="mw7 center">
  <h2 class="athelas ph3 ph0-l">Hipster beard blog - hosted on Prismic</h2>
  <% documents.each do |document| %>
  <article class="pv4 bt bb b--black-10 ph3 ph0-l">
    <div class="flex flex-column flex-row-ns">
      <div class="w-100 w-60-ns pr3-ns order-2 order-1-ns">
        <h1 class="f3 athelas mt0 lh-title"><%= document['beardpage.title'].as_text() %></h1>
        <p class="f5 f4-l lh-copy athelas">
          <%= document['beardpage.subheading'].as_text() %>
        </p>
      </div>
      <div class="pl3-ns order-1 order-2-ns mb4 mb0-ns w-100 w-40-ns">
        <img src="<%= document['beardpage.mainimage'].url %>" class="db" alt="blog image">
      </div>
    </div>
    <p class="f6 lh-copy gray mv0 ttu"><a href=<%= "/beard/#{document['beardpage.slug'].as_text()}.html" %>>Read this article</a></p>
  </article>
  <% end %>
</section>