<section class="mw7 center">
<h2 class="athelas ph3 ph0-l">Cat blog - hosted on Contentful</h2>

<% data.catBlog.catPage.each do |page| %>
  
  <article class="pv4 bt bb b--black-10 ph3 ph0-l">
    <div class="flex flex-column flex-row-ns">
      <div class="w-100 w-60-ns pr3-ns order-2 order-1-ns">
        <h1 class="f3 athelas mt0 lh-title"><%= page[1][:title] %></h1>
        <p class="f5 f4-l lh-copy athelas">
          <%= page[1][:subheading] %>
        </p>
      </div>
      <div class="pl3-ns order-1 order-2-ns mb4 mb0-ns w-100 w-40-ns">
        <img src=<%= page[1][:main_image][:url] %> class="db">
      </div>
    </div>
    <p class="f6 lh-copy gray mv0 ttu"><a href="/cat/<%= page[1][:slug] %>.html">Visit page</a></p>
  </article>

<% end %>

</section>